<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/outlined_edittext_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/grey_text" />
                    <corners android:radius="8dp" />
                    <padding
                        android:left="8dp"
                        android:top="8dp"
                        android:right="8dp"
                        android:bottom="8dp" />

                </shape>

            </item>
            <item android:drawable="@drawable/ic_arrow_down"
                android:width="24dp"
                android:height="24dp"
                android:gravity="end"/>

        </layer-list>
    </item>

</selector>
